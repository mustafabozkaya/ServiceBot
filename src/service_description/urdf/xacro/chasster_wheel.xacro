<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="chasster_wheel" params="name parent xyz rpy  *origin ">
        <link name="${name}_link">

            <visual>
                <origin rpy="${rpy}" xyz="${xyz}" />
                <geometry>
                    <mesh filename="package://service_description/meshes/sarhos_tabla/sarhos_teker.STL" scale="0.001 0.001 0.001" />
                </geometry>
                <material name="green">
                    <color rgba="0 1 0 1" />
                </material>
            </visual>
            <collision>
                <origin rpy="${rpy}" xyz="${xyz}" />
                <geometry>
                    <cylinder length="0.01" radius="0.015" />
                </geometry>
            </collision>

        </link>


        <joint name="${name}_joint" type="continuous">
            <parent link="${parent}" />
            <child link="${name}_link" />
            <xacro:insert_block name="origin" />
            <axis xyz="0 1 0" />
        </joint>
    </xacro:macro>
</robot>