<launch>

    <arg name="model" default="service" doc="model type [servicebot, amr]" />
    <arg name="rvizconfig" default="$(find service_description)/rviz/model_view.rviz" />
    <arg name="world_name" default="$(find diffbot_gazebo)/worlds/playground.world" />

    <include file="$(find service_description)/launch/servicebot_view.launch">
        <arg name="model" value="$(arg model)" />
        <arg name="world_name" value="$(arg world_name)" />
    </include>

    <include file="$(find service_description)/launch/servicebot_control.launch">
        <arg name="model" value="$(arg model)" />
    </include>

    <!-- Launch visualization in rviz -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />

    <!-- launch rqt_joy -->
    <node name="robot_steer" pkg="rqt_robot_steering" type="rqt_robot_steering" output="screen" />


</launch>